---
layout: page
---
<style>
.site-header {
    border-bottom: 1px solid var(--gray6);
}

.home {
    margin-top: -6rem;
}
</style>

<div class="home">
    <div id="categories">
        <section class="bg"></section>
        <div class="category-groups">
            <div class="category-group">
                <div class="items">
                    {% for post in site.posts %}
                        {% if post.show %}
                            <a href="{{ post.url | relative_url }}" class="category-post-link">
                                <div class="item item_{{ post.icon }}">
                                    <h3>
                                        {{ post.title }}
                                    </h3>
                                    {% if site.excerpt or site.theme_settings.excerpt %}
                                        <div class="excerpt">
                                            {% if site.excerpt == "truncate" %}
                                               {{ post.content | strip_html | truncate: '250' | escape }}
                                            {% else %}
                                               {{ post.excerpt | strip_html | truncate: '75' | escape }}
                                            {% endif %}
                                        </div>
                                    {% endif %}
                                    {% if post.tags.size > 0 %}
                                        <div class='tag-list'>
                                            {% for tag in post.tags %}
                                                <a class='button' href='{{site.baseurl}}/tags/#{{ tag }}'>{{ tag }}</a>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                    <br/>
                                    {% include blog/post_info.liquid author=post.author date=post.date %}
                                </div>
                            </a>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>

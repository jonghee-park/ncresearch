<div class="home">
    <div id="categories">
        <div class="category-groups">
            <div>
                <span class="blogs-title">Blogs</span>
                <a class="blogs-link" href="https://ncsoft.github.io/ncresearch/blogs/">더보기</a>
            </div>
            <div class="category-group">
                {% assign posts = site.posts | sort: "index" | reverse %}
                {% for post in posts limit:6 %}
                {% if post.show %}
                    <div class="category-item">
                        {% if post.img_name %}
                        <div class="category-item-img">
                            <img src="{{site.baseurl}}/assets/img/post/{{post.permalink}}/{{post.img_name}}"></img>
                        </div>
                        {% endif %}
                        <a href="{{ post.url | relative_url }}" class="category-post-link">
                            <h3>
                                {{ post.title }}
                                {% if post.new == true %}
                                    <span class="category-item-new"></span>
                                {% endif %}
                            </h3>
                        </a>
                        {% if post.tags.size > 0 %}
                            <div class='tag-list'>
                                {% for tag in post.tags %}
                                    {% if tag != ' ' %}
                                        <a class='button' href='{{site.baseurl}}/tags/#{{ tag }}'>{{ tag }}</a>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                {% endif %}
                {% endfor %}
            </div>
            <div class="publication-title-group">
                <span class="publication-title">Publications</span>
                <a class="publication-link" href="https://ncsoft.github.io/ncresearch/publications/">더보기</a>
            </div>
            <div class="publication-group">
                {% assign pubs = site.data.publications | sort: "year" | reverse %}
                {% for pub in pubs limit:5 %}
                    <div class="publication_div">
                        <h3 class="pub_title">
                            {{ pub.title }}
                        </h3>
                        <div class='publications_meta'>{{ pub.conf }}</div>
                        <div class='publications_author'>{{ pub.authors }}</div>
                        {% if pub.tags.size > 0 %}
                            {% for tag in pub.tags %}
                                <a class='publication_tag' href='' data-filter="{{ tag }}">{{ tag }}</a>
                            {% endfor %}
                        {% endif %}
                        <div>　</div>
                    </div>
                    {% if forloop.index < 5 %}
                        <hr/>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>
